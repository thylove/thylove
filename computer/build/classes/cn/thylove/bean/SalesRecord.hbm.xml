<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
   
<hibernate-mapping>
	<!-- 
		1.配置类和表对应
			class 标签
			name属性：实体类的全路径
			table属性：数据库表的名称
	 -->
	 <class name="cn.thylove.bean.SalesRecord" table="SalesRecord">
	 	<!-- 
	 		2. 配置实体类的id和表的id对应
	 			hibernate 要求实体类有一个属性唯一值
	 			hibernate 要求表有字段作为唯一值
	 	 -->
	 	 <!-- 
	 	 	id标签
	 	 	name属性，实体类里面id属性名称
	 	 	column属性
	 	  -->
	 	  <id name = "salesID" column = "salesID">
	 	  
	 	  	<!-- 
	 	  		设置数据库表bookid增长策略
	 	  			native就是表明bookid就是主键自动增长
	 	  	 -->
	 	  	 
	 	  	<generator class="native"></generator>
	 	  </id>
	 	  <!-- 
	 	  	配置其他属性和表字段对应
	 	  	name实体类属性名称
	 	  	column属性：生成表字段名称
	 	   -->
	 	   <property name="userID"  column="userID"></property>
	 	   <property name="proID"  column="proID"></property>
	 	   <property name="userName"  column="userName"></property>
	 	   <property name="salesTime"  column="salesTime"></property>
	 	   <property name="proModel"  column="proModel"></property>
	 	   <property name="proPrice"  column="proPrice"></property>
	 	   <property name="proName"  column="proName"></property>
	 	   <property name="storeID"  column="storeID"></property>
	 </class>
</hibernate-mapping>